{
    "private": true,
    "name": "my-app",
    "version": "1.0.0",
    "description": "npm init template for bootstrapping an empty Colyseus project",
    "main": "build/src/index.js",
    "engines": {
        "node": ">= 20"
    },
    "scripts": {
        "start": "node build/src/index.js",
        "dev-server": "tsx src/index.ts --watch --onSuccess 'tsc -p tsconfig.json'",
        "build": "rimraf build && tsc",
        "loadtest": "tsx loadtest/example.ts --room game --numClients 4",
        "lint": "eslint 'src/**/*.{js,ts}' --fix",
        "format": "prettier --write 'src/**/*.{js,ts,json,css,md}'"
    },
    "author": "Diego Lamar√£o - diego.lamarao92@gmail.com",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/colyseus/create-colyseus/issues"
    },
    "homepage": "https://github.com/colyseus/create-colyseus#readme",
    "devDependencies": {
        "@colyseus/loadtest": "^0.15.0",
        "@colyseus/testing": "^0.15.0",
        "@types/express": "^4.17.1",
        "@types/mocha": "^10.0.1",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.3.0",
        "@typescript-eslint/parser": "^8.3.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.35.0",
        "eslint-plugin-react-hooks": "^4.6.2",
        "mocha": "^10.2.0",
        "rimraf": "^5.0.0",
        "tsx": "^4.10.2",
        "typescript": "^5.0.4",
        "typescript-eslint": "^8.2.0"
    },
    "dependencies": {
        "@colyseus/monitor": "^0.15.0",
        "@colyseus/playground": "^0.15.3",
        "@colyseus/tools": "^0.15.0",
        "colyseus": "^0.15.0",
        "express-basic-auth": "^1.2.1",
        "sat": "^0.9.0",
        "uuid": "^10.0.0"
    }
}
